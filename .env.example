# ============================================
# LLM Provider Configuration
# ============================================
# Choose your LLM provider: "azure_openai", "openai", or "lm_studio"
LLM_PROVIDER=azure_openai

# ============================================
# Embedding Provider Configuration
# ============================================
# Optional: Choose embedding provider separately from LLM provider
# If not set, will use the same provider as LLM_PROVIDER
# Options: "azure_openai" or "openai"
# EMBEDDING_PROVIDER=azure_openai

# ============================================
# Azure OpenAI Configuration
# ============================================
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# Azure OpenAI Model Deployments
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_NAME=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# ============================================
# LM Studio Configuration (Local LLM)
# ============================================
LM_STUDIO_BASE_URL=http://127.0.0.1:1234/v1
LM_STUDIO_API_KEY=lm-studio
# Note: LM Studio uses whatever model you have loaded in the application

# ============================================
# AWS Configuration (for S3 storage)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=ti-tool-s3-storage

# Note: All data (crawled_data, processed_data, summarised_content, rag_storage)
# is stored in S3 for persistence across deployments

# ============================================
# SearXNG Configuration
# ============================================
SEARXNG_URL=http://localhost:8888
SEARXNG_BASE_URL=http://localhost:8080

# ============================================
# LinkedIn Credentials (for monitoring)
# ============================================
LINKEDIN_USERNAME=your-linkedin-email@example.com
LINKEDIN_PASSWORD=your-linkedin-password

# ============================================
# Streamlit Configuration (for production)
# ============================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# ============================================
# Security & Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/opt/ti-tool/logs/app.log
